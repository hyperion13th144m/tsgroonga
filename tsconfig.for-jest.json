{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "types": [
            "@types/jest"
        ],
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
